# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/smart_agri
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_agri
DB_USER=postgres
DB_PASSWORD=password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=alerts@smartagri.com
SENDGRID_FROM_NAME=Smart Agri IoT

# External APIs
AGROMONITORING_API_KEY=your_agromonitoring_api_key
MOSDAC_USERNAME=your_mosdac_username
MOSDAC_PASSWORD=your_mosdac_password
BHUVAN_API_TOKEN=your_bhuvan_api_token

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=mqtt_user
MQTT_PASSWORD=mqtt_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
